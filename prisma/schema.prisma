generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL_POSTGRES_URL")
}

model Transaction {
  id          Int      @id @default(autoincrement())
  userId      String // Clerk User ID
  category    String
  description String?
  account     String
  type        String
  amount      Float
  date        DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId, date], name: "user_date_index")
}

model Category {
  userId     String // Clerk User ID
  name       String
  type       String
  amount     Float
  budgetLeft Float
  createdAt  DateTime @default(now())

  @@unique([userId, name])
}

model MonthHistory {
  id      Int    @id @default(autoincrement())
  userId  String // Clerk User ID
  day     Int
  month   Int
  year    Int
  income  Float // Use Decimal for accurate financial data
  expense Float // Use Decimal for accurate financial data

  @@unique([userId, day, month, year])
  @@index([userId, day, month, year]) // Compound index for efficient querying
}

model YearHistory {
  userId  String // Clerk User ID
  month   Int
  year    Int
  income  Float // Use Decimal for accurate financial data
  expense Float // Use Decimal for accurate financial data

  @@unique([userId, month, year]) // Compound index for efficient querying
  @@index([userId, month, year])
}
